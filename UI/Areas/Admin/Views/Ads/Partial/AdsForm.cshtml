@model DTO.AdsDTO
<div class="card-body">
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        <label>Link</label>
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control", @placeholder = "Link" })
        @Html.ValidationMessageFor(x => x.Link)
    </div>
    <div class="form-group">
        <label>Size</label>
        @Html.TextBoxFor(x => x.Size, new { @class = "form-control", @placeholder = "Size" })
        @Html.ValidationMessageFor(x => x.Size)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.AdsImage)
        <input type="file" name="AdsImage" accept="image/gif, image/png, image/jpeg,image/jpg"
               onchange="$('#AdsImage')[0].src= window.URL.createObjectURL(this.files[0])" />
        <br />       
        @if (Model != null && Model.ImagePath != null)
        {           
            <br />
            <img src="~/Areas/Admin/Content/AdsImages/@Model.ImagePath" width="300" height="200" />
        }
        else
        {
            <img src="" width="300" height="200" id="AdsImage" />
        }
    </div>
    <input type="number" name="AdsID" value="@Model.ID " hidden />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>

