@using UI.Areas.Admin
@if (ViewBag.ProcessState == BLL.General.Messages.AddSuccess)
{
    <div class=" alert alert-success ">
        <strong> Success !! Add Operation was compled Successfully.</strong>
    </div>
}
else if (ViewBag.ProcessState == BLL.General.Messages.EmptyArea)
{
    <div class=" alert alert-danger  ">
        <strong> Error !! Please fill the neccessary area.</strong>
    </div>
}
else if (ViewBag.ProcessState == BLL.General.Messages.UpdateSuccess)
{
    <div class=" alert alert-success  ">
        <strong> Success !! Updated Operation was compled Successfully.</strong>
    </div>
}
else if (ViewBag.ProcessState == BLL.General.Messages.ImageMissing)
{
    <div class=" alert alert-danger  ">
        <strong>Error !! Please select an image.</strong>
    </div>
}
else if (ViewBag.ProcessState == BLL.General.Messages.ExtensionError)
{
    <div class=" alert alert-danger  ">
        <strong>Error !! Please select file with true extension.</strong>
    </div>
}
else if (ViewBag.ProcessState == BLL.General.Messages.GeneralError)
{
    <div class=" alert alert-danger  ">
        <strong>Error !!</strong>
    </div>
}
else if (ViewBag.ProcessState == BLL.General.Messages.NochangeError)
{
<div class=" alert alert-danger  ">
    <strong>No change in Data !!</strong>
</div>
}


