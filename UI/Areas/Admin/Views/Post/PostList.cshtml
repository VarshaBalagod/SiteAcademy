
@{
    ViewBag.Title = "PostList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.PostDTO>
<section class="content-header">
    <h1>Post List</h1>
    <ul class="breadcrumb float-sm-left">
        <li class="breadcrumb-item "><a>Admin</a></li>
        <li class="breadcrumb-item "><a>Post</a></li>
        <li class="breadcrumb-item "><a>Add Post</a></li>
        <li class="breadcrumb-item active"><a>Post List</a></li>
    </ul>
</section>
<br />
<div class="card-footer">
    <button type="submit" class=" btn btn-primary" onclick="window.location.href='/Admin/Post/AddPost'">Add Post</button>
</div>

@using DTO
@{ 
    CountDTO dtoCount = (CountDTO)ViewData["AllCounts"];
}


<div class="card">
    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@dtoCount.PostCount</h3>

                    <p>Post Count</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
               
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@dtoCount.ViewCount</h3>

                    <p>Sum View Count</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>                
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@dtoCount.CommentCount</h3>

                    <p>Comment Count</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@dtoCount.MessageCount</h3>

                    <p>Message Count</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
              
            </div>
        </div>
        <!-- ./col -->
    </div>
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" data-name="PostTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category Name</th>
                    <th>Add date</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr id="a_@item.PostID">
                        <td>@item.Title</td>
                        <td>@item.CategoryName</td>
                        <td>@item.AddDate.ToString("dd.MM.yyyy, dddd")</td>
                        <td align="center" valign="middle">
                            <a href="~/Admin/Post/UpdatePost/@item.PostID ">
                                <img src="~/Areas/Admin/Content/icon/update.png" width="20" height="20" />
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <img src="~/Areas/Admin/Content/icon/delete.png" width="20" height="20" onclick="AskQuestion('/Admin/Post/DeletePost/', @item.PostID)" />
                            </a>
                        </td>

                    </tr>

                }
            </tbody>

            <tfoot>
                <tr>
                    <th>Title</th>
                    <th>Category Name</th>
                    <th>Add date</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>





