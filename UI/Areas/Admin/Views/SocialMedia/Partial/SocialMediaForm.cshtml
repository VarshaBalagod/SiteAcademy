@model DTO.SocialMediaDTO
<div class="card-body">
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        <label>Link</label>
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control", @placeholder = "Link" })
        @Html.ValidationMessageFor(x => x.Link)
    </div>
    <input type="number" name="SocialMediaID" value="@Model.ID" hidden />
    <div class="form-group">
        @Html.LabelFor(x => x.SocialImage)
        <input type="file" name="SocialImage" accept="image/gif, image/png, image/jpeg,image/jpg"
               onchange="$('#SocialImage')[0].src= window.URL.createObjectURL(this.files[0])" />
        <br />
        @if (Model != null && Model.ImagePath != null)
        {
            <br />
            <img src="~/Areas/Admin/Content/AdminImages/SocialMediaImages/@Model.ImagePath" width="300" height="200" />
        }
        else
        {
            <img src="" width="300" height="200" id="SocialImage" />
        }
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
