@model DTO.UserDTO
@using DTO 
@{ SessionDTO session = (SessionDTO)Session["UserInfo"];}
<div class="card-body">
    <div class="form-group">
        <label>User Name</label>
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "User Name" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    @if (session.IsAdmin)
    {
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="IsAdmin" checked="@Model.IsAdmin" value="true">
            <label class="form-check-label">Is Admin</label>
        </div>
        <br />
    }
    <div class="form-group">
        @Html.LabelFor(x => x.UserImage)
        <input type="file" name="UserImage" accept="image/gif, image/png, image/jpeg,image/jpg"
               onchange="$('#UserImage')[0].src= window.URL.createObjectURL(this.files[0])" />
        <br />
        @if (Model != null && Model.ImagePath != null)
        {
            <br />
            <img src="~/Areas/Admin/Content/AdminImages/UserImages/@Model.ImagePath" width="300" height="200" />
        }
        else
        {
            <img src="" width="300" height="200" id="UserImage" />
        }
    </div>

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", @placeholder = "Name" })
        @Html.ValidationMessageFor(x => x.NameSurname)
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <input type="number" name="UserID" value="@Model.ID " hidden />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
