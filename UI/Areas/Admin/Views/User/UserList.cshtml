
@{
    ViewBag.Title = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.UserDTO>
<section class="content-header">
    <h1>User List Operation</h1>
    <ul class="breadcrumb float-sm-left">
        <li class="breadcrumb-item "><a>Admin</a></li>
        <li class="breadcrumb-item "><a>User</a></li>
        <li class="breadcrumb-item "><a>Add User</a></li>
        <li class="breadcrumb-item active"><a>User List</a></li>
    </ul>
</section>
<br />
<div class="card-footer">
    <button type="submit" class=" btn btn-primary" onclick="window.location.href='/Admin/User/AddUser'">Add User</button>
</div>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Image</th>
                    <th>Is Admin</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr id="a_@item.ID">
                        <td>@item.Username</td>
                        <td>@item.NameSurname  </td>
                        <td>@item.Email  </td>
                        <td><img src="~/Areas/Admin/Content/AdminImages/UserImages/@item.ImagePath" width="100" height="100" /></td>
                        <td>@item.IsAdmin  </td>
                        <td align="center" valign="middle">
                            <a href="~/Admin/User/UpdateUser/@item.ID ">
                                <img src="~/Areas/Admin/Content/icon/update.png" width="20" height="20" />
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <img src="~/Areas/Admin/Content/icon/delete.png" width="20" height="20" onclick="AskQuestion('/Admin/User/DeleteUser/', @item.ID)" />
                            </a>
                        </td>

                    </tr>

                }
            </tbody>

            <tfoot>
                <tr>
                    <th>User Name</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Image</th>
                    <th>Is Admin</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
</div>

<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>




