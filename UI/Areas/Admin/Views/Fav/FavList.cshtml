
@{
    ViewBag.Title = "FavList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.FavDTO>
<section class="content-header">
    <h1>Fav Logo Title List</h1>
    <ul class="breadcrumb float-sm-left">
        <li class="breadcrumb-item "><a>Admin</a></li>
        <li class="breadcrumb-item "><a>Fav Logo Title</a></li>
        <li class="breadcrumb-item "><a>Add Fav Logo Title</a></li>
        <li class="breadcrumb-item active"><a>Fav Logo Title List</a></li>
    </ul>
</section>
<br />
<div class="card-footer">
    <button type="submit" class=" btn btn-primary" onclick="window.location.href='/Admin/Fav/AddFav'">Add Fav Logo Title</button>
</div>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Fav</th>
                    <th>Logo</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr id="a_@item.ID">
                        <td>@item.Title</td>
                        <td><img src="~/Areas/Admin/Content/AdminImages/FavImages/@item.Fav" width="100" height="100" /></td>
                        <td><img src="~/Areas/Admin/Content/AdminImages/LogoImages/@item.Logo" width="100" height="100" /></td>
                        <td align="center" valign="middle">
                            <a href="~/Admin/Fav/UpdateFavWithID/@item.ID ">
                                <img src="~/Areas/Admin/Content/icon/update.png" width="20" height="20" />
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <img src="~/Areas/Admin/Content/icon/delete.png" width="20" height="20" />
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Title</th>
                    <th>Fav</th>
                    <th>Logo</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>






